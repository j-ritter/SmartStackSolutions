<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Premium">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/btnBackPremium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/premium_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock Premium Features"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/btnBackPremium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btnBackPremium"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/premium_title"
        app:layout_constraintBottom_toTopOf="@id/button_premium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Introduction Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/premium_contentintro_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/premium_contentintro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thank you for choosing SmartStackSolutions!\n\nWith the basic version, you can manage your Open Payments and stay on top of upcoming bills.\n\nUpgrade to Premium to unlock:\n\n• Closed Payments: Track paid bills.\n• Income Management: Manage your income streams.\n\nUnlock Premium to enjoy a comprehensive financial overview."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:padding="4dp"
                    android:gravity="left" />
            </androidx.cardview.widget.CardView>

            <!-- Features Section Title -->
            <TextView
                android:id="@+id/features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Features"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Feature 1: Open Payments (Basic) with Expandable Text -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_frame_background_blue"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/icon_open_payments"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_spendings_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/feature1_text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/icon_open_payments"
                    app:layout_constraintEnd_toStartOf="@+id/btn_more_info1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <!-- Title: Open Payments -->
                    <TextView
                        android:id="@+id/feature1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Payments"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Description: Manage open payments -->
                    <TextView
                        android:id="@+id/feature1_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage open payments and stay on top of upcoming bills."
                        android:textSize="12sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_more_info1"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="More information"
                    android:textSize="7sp"
                    android:background="@color/yellow"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Expandable TextView for Open Payments -->
                <TextView
                    android:id="@+id/feature1_expandable_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Open Payments allow you to manage your upcoming bills, set reminders, track payments and helps you pay on time."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_more_info1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Feature 2: Closed Payments (Premium) with Expandable Text -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_frame_background_blue"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/premium_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@color/orange"
                    android:padding="4dp"
                    android:rotation="-45"
                    android:layout_marginStart="-10dp"
                    android:layout_marginTop="-10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/icon_closed_payments"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_closedpayment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/feature2_text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/icon_closed_payments"
                    app:layout_constraintEnd_toStartOf="@+id/btn_more_info2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <!-- Title: Closed Payments -->
                    <TextView
                        android:id="@+id/feature2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closed Payments"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Description: Track paid bills -->
                    <TextView
                        android:id="@+id/feature2_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track bills you've paid and manage your transaction history."
                        android:textSize="12sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_more_info2"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="More information"
                    android:textSize="7sp"
                    android:background="@color/yellow"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Expandable TextView for Closed Payments -->
                <TextView
                    android:id="@+id/feature2_expandable_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Closed Payments help you keep track of your paid bills and gain insight into your past transactions for better financial management."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_more_info2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Feature 3: Income Management (Premium) with Expandable Text -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_frame_background_blue"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/premium_label3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@color/orange"
                    android:padding="4dp"
                    android:rotation="-45"
                    android:layout_marginStart="-10dp"
                    android:layout_marginTop="-10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/icon_income"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_attach_money_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/feature3_text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/icon_income"
                    app:layout_constraintEnd_toStartOf="@+id/btn_more_info3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <!-- Title: Income Management -->
                    <TextView
                        android:id="@+id/feature3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Income Management"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Description: Track income -->
                    <TextView
                        android:id="@+id/feature3_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track and categorize your income sources."
                        android:textSize="12sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_more_info3"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="More information"
                    android:textSize="7sp"
                    android:background="@color/yellow"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Expandable TextView for Income Management -->
                <TextView
                    android:id="@+id/feature3_expandable_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Income Management helps you track your different income streams, including salaries, freelance work, and investments."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_more_info3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Feature 4: Notifications (Basic) with Expandable Text -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_frame_background_blue"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/icon_notifications"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_alarm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/feature4_text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/icon_notifications"
                    app:layout_constraintEnd_toStartOf="@+id/btn_more_info4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <!-- Title: Notifications -->
                    <TextView
                        android:id="@+id/feature4_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Description: Receive timely reminders -->
                    <TextView
                        android:id="@+id/feature4_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receive timely reminders for your open payments."
                        android:textSize="12sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_more_info4"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="More information"
                    android:textSize="7sp"
                    android:background="@color/yellow"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Expandable TextView for Notifications -->
                <TextView
                    android:id="@+id/feature4_expandable_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Get timely notifications via push or in the app to ensure you never miss an upcoming payment."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_more_info4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Feature 5: Calendar (Basic) with Expandable Text -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_frame_background_blue"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/icon_calendar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_calendar_month_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/feature5_text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/icon_calendar"
                    app:layout_constraintEnd_toStartOf="@+id/btn_more_info5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <!-- Title: Calendar -->
                    <TextView
                        android:id="@+id/feature5_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calendar"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Description: Get an overview of transactions -->
                    <TextView
                        android:id="@+id/feature5_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get an overview of all your transactions in a calendar view."
                        android:textSize="12sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_more_info5"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="More information"
                    android:textSize="7sp"
                    android:background="@color/yellow"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Expandable TextView for Calendar -->
                <TextView
                    android:id="@+id/feature5_expandable_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="The calendar feature provides an overview of all your payments, income, and transactions in an easy-to-navigate monthly view."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_more_info5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Unlock Button -->
    <Button
        android:id="@+id/button_premium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Unlock SmartStackSolutions Premium"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:background="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

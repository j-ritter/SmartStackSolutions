<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FAQs">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/btnBackFAQs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/faqs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQs"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/btnBackFAQs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btnBackFAQs"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scroll View for Questions and Answers -->
    <ScrollView
        android:id="@+id/scroll_view_faqs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/faqs_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Question 1 -->
            <LinearLayout
                android:id="@+id/question_1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/nav_item_background_light"
                android:padding="16dp">

                <TextView
                    android:id="@+id/question_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1. What is SmartStackSolutions?"
                    android:textSize="12sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/arrow_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="Expandable Arrow"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Expandable Answer 1 -->
            <LinearLayout
                android:id="@+id/answer_section_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <!-- Answer 1 -->
                <TextView
                    android:id="@+id/answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer: SmartStackSolutions is a comprehensive financial management app designed to help users keep track of their payments and incomes. It allows users to categorize transactions, set reminders, and view financial data in various formats to help with budgeting and financial planning."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/background_blue1"
                    android:padding="16dp"/>
            </LinearLayout>

            <!-- Question 2 -->
            <LinearLayout
                android:id="@+id/question_2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/nav_item_background_light"
                android:padding="16dp">

                <TextView
                    android:id="@+id/question_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2. How do I add a new 'open payment'?"
                    android:textSize="12sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/arrow_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="Expandable Arrow"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Expandable Answer 2 -->
            <LinearLayout
                android:id="@+id/answer_section_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <!-- Answer 2 -->
                <TextView
                    android:id="@+id/answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer: To add a new 'open payment', go to the 'Open Payments' section of the app, click on the 'Plus' button, and fill in the necessary details such as title, amount, and date. You can also add a document or other relevant information."
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/background_blue1"
                    android:padding="16dp"/>
            </LinearLayout>

            <!-- Question 3 -->
